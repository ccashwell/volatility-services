{
  "compilerOptions": {
    "declaration": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "pretty": true,
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["es6"],
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"],
      "blessed": ["typings/blessed/index.d.ts"],
      "moleculer-cron": ["typings/moleculer-cron/index.d.ts"],
      "moleculer-web-uws": ["typings/moleculer-web-uws/index.d.ts"],
      "@clients/*": ["src/clients/*"],
      "@clients": ["src/clients"],
      "@configuration/*": ["src/configuration/*"],
      "@configuration": ["src/configuration/index.ts"],
      "@contracts/*": ["src/contracts/*"],
      "@contracts": ["src/contracts"],
      "@datasources/*": ["src/datasources/*"],
      "@datasources": ["src/datasources"],
      "@entities/*": ["src/entities/*"],
      "@entities": ["src/entities"],
      "@events/*": ["src/events/*"],
      "@events": ["src/events"],
      "@interfaces/*": ["src/interfaces/*"],
      "@interfaces": ["src/interfaces"],
      "@mixins/*": ["mixins/*"],
      "@mixins": ["mixins"],
      "@repositories/*": ["src/repositories/*"],
      "@repositories": ["src/repositories"],
      "@services/*": ["services/*"],
      "@services": ["services"],
      "@service_helpers/*": ["src/service_helpers/*"],
      "@service_helpers": ["src/service_helpers"],
      "@Meta/*": ["src/meta/*"],
      "@Meta": ["src/meta"],
      "@lib/*": ["src/lib/*"],
      "@lib": ["src/lib"],
      "@volatility-api/*": ["volatility-api/*"],
      "@volatility-api": ["volatility-api"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./services/**/*.ts",
    "./moleculer.config.ts",
    "./test/**/*.ts",
    "./volatility-api/**/*.ts"
  ],
  "exclude": ["node_modules", "src/graph.ts", "ormconfig.js"]
}
